<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="14dp">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/reply_avatar_image_view"
        android:background="@mipmap/ic_launcher"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <TextView
        android:id="@+id/reply_user_name_text_view"
        android:text="Little UFO"
        android:textColor="@color/text_color_black"
        android:layout_toRightOf="@id/reply_avatar_image_view"
        android:layout_toEndOf="@id/reply_avatar_image_view"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.example.lyz.myv2ex.widgets.RelativeTimeTextView
        android:id="@+id/reply_time_ago_text_view"
        android:text="0 minute ago"
        android:layout_toRightOf="@id/reply_user_name_text_view"
        android:layout_toEndOf="@id/reply_user_name_text_view"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/reply_content_text_view"
        android:text="This is content This is content This is content This is content This is content This is content This is content This is content This is content This is content This is content This is content This is content This is content This is content This is content This is content This is content This is content"
        android:layout_toRightOf="@id/reply_avatar_image_view"
        android:layout_toEndOf="@id/reply_avatar_image_view"
        android:layout_below="@id/reply_user_name_text_view"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>