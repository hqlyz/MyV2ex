<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_bg_play"
    android:padding="14dp">

    <TextView
        android:id="@+id/topic_title_text_view"
        android:text="This is the title"
        android:textSize="24sp"
        android:textColor="@color/text_color_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/topic_content_text_view"
        android:text="This is the content This is the content This is the content This is the content This is the content This is the content This is the content This is the content This is the content This is the content This is the content This is the content This is the content This is the content This is the content This is the content This is the content"
        android:textSize="14sp"
        android:maxLines="10"
        android:layout_marginTop="8dp"
        android:layout_below="@id/topic_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/topic_avatar_image_view"
        android:layout_below="@id/topic_content_text_view"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/avatar_image_description"
        android:src="@mipmap/ic_launcher"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <TextView
        android:id="@+id/topic_name_text_view"
        android:text="UFO"
        android:textColor="@color/text_color_black"
        android:layout_alignTop="@id/topic_avatar_image_view"
        android:layout_toRightOf="@id/topic_avatar_image_view"
        android:layout_toEndOf="@id/topic_avatar_image_view"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.example.lyz.myv2ex.widgets.RelativeTimeTextView
        android:id="@+id/topic_time_ago_text_view"
        android:text="0 minute ago"
        android:layout_alignBottom="@id/topic_avatar_image_view"
        android:layout_toRightOf="@id/topic_avatar_image_view"
        android:layout_toEndOf="@id/topic_avatar_image_view"
        android:layout_alignLeft="@id/topic_name_text_view"
        android:layout_alignStart="@id/topic_name_text_view"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/topic_replies_text_view"
        android:text="100 replies"
        android:layout_alignBottom="@id/topic_time_ago_text_view"
        android:layout_toRightOf="@id/topic_time_ago_text_view"
        android:layout_toEndOf="@id/topic_time_ago_text_view"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>